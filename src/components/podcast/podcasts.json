{
  "collectionName": "components_podcast_podcasts",
  "info": {
    "displayName": "podcasts",
    "icon": "play"
  },
  "options": {},
  "attributes": {
    "titre_podcast": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description_podcast": {
      "type": "text",
      "required": true
    },
    "image_podcast": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "audio_podcast": {
      "allowedTypes": [
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "lien_spotify": {
      "type": "string"
    },
    "couleur": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    }
  }
}
